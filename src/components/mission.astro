const { } = Astro.props;
---

<section class="panel section2 relative lg:grid lg:grid-cols-4 lg:h-screen lg:min-h-[640px] lg:px-lg-side px-sm-side pt-20 bg-right bg-no-repeat bg-cover bg-white lg:snap-start
    lg:bg-[url('/grids/grid_Mission-1024.svg')] 2xl:bg-[url('/grids/grid_Mission-1440.svg')]">
