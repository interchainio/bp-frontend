---
interface Props {
	title: string;
	subtitle: string;
	content: string;
    img: string;
}

const { title, subtitle, content, img } = Astro.props;
---

<div class="lg:grid lg:grid-cols-6 lg:min-h-screen lg:min-h-[640px] px-lg-side py-lg-top lg:snap-start" >
    <div class="col-span-2 flex items-center relative ">
        <img src={img} class="absolute inset-0 object-contain h-full w-4/5 ml-[-100px]"/>
        <div class="h-full items-top z-50">
            <h4 class="text-md text-blue items-top">How We <br/> Support <br/> Teams</h4>
        </div>
    </div>
    <div class="col-span-3 col-start-3 my-auto">
        <h4 class="font-normal text-lg mb-[24px]">{title}</h4>
        <h2 class="font-bold text-2xl mb-[24px] text-blue">{subtitle}</h2>
        <p class="text-base mb-[20px]">
            {content}
        </p>
        <div class="inline-block mb-6 hover:scale-105 transition-all duration-100 ease-in-out">
            <a href="/apply/">
                <h6 class="inline align-middle font-medium text-sm text-blue">APPLY NOW</h6>
                <img src="/icons/arrow.png" class="inline h-[14px] w-auto ml-[6px]"/>
            </a>
        </div>
    </div>
</div>
